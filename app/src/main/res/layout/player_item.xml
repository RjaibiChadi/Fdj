<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/container_team"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
  >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/player_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
             />

         <TextView
             android:id="@+id/player_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="ssdfdsfdsf"
             android:layout_toRightOf="@id/player_img"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="15dp"
             android:textColor="@android:color/black"
             />
                <TextView
                    android:id="@+id/player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ssdfdsfdsf"
                    android:layout_toRightOf="@id/player_img"
                    android:layout_below="@+id/player_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    />
                <TextView
                    android:id="@+id/player_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ssdfdsfdsf"
                    android:layout_toRightOf="@id/player_img"
                    android:layout_below="@+id/player_position"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    />
                <TextView
                    android:id="@+id/player_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ssdfdsfdsf"
                    android:layout_toRightOf="@id/player_img"
                    android:layout_below="@+id/player_birthday"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/darker_gray"
                    />

        </RelativeLayout>
</androidx.cardview.widget.CardView>

